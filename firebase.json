{
  "hosting": {
    "public": "public",
    "cleanUrls": true,
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsFunc"
      },
      {
        "source": "/events/**",
        "dynamicLinks": true
      },
      {
        "source": "/memories/**",
        "dynamicLinks": true
      }
    ]
  },
  "functions": {
    "runtime": "nodejs14",
    "source": ".",
    "predeploy": [
      "npm --prefix \"$PROJECT_DIR\" install",
      "npm --prefix \"$PROJECT_DIR\" run build"
    ]
  }
}
