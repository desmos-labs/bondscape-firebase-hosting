{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/events/**",
        "dynamicLinks": true
      },
      {
        "source": "/memories/**",
        "dynamicLinks": true
      },
      {
        "source": "/privacy",
        "destination": "/privacy.html"
      },
      {
        "source": "/terms",
        "destination": "/terms.html"
      },
      {
        "source": "!/(events|memories|privacy|terms)/",
        "destination": "/index.html"
      }
    ]
  }
}
